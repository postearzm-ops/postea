# Database Configuration
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://admin:your_secure_password_here@localhost:5432/linkedin_automation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# LinkedIn OAuth 2.0
# Obtener en: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# News APIs
# NewsAPI.org - https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key

# GNews API - https://gnews.io/
GNEWS_KEY=your_gnews_key

# MediaStack API (opcional) - https://mediastack.com/
MEDIASTACK_KEY=your_mediastack_key

# LLM Configuration
OLLAMA_URL=http://localhost:11434
LLM_MODEL=llama3.1
# Alternativa: usar Groq API (gratuito)
# GROQ_API_KEY=your_groq_api_key
# LLM_PROVIDER=groq

# Scheduler Configuration
FETCH_NEWS_CRON=0 */4 * * *        # Cada 4 horas
ANALYZE_NEWS_CRON=0 */6 * * *      # Cada 6 horas
PUBLISH_POSTS_CRON=0 9,14 * * *    # 9 AM y 2 PM diariamente

# Email Notifications (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000        # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100        # MÃ¡ximo 100 requests por ventana

# Logging
LOG_LEVEL=info                     # debug, info, warn, error
LOG_FILE_PATH=./logs

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:5173

# Features Flags
ENABLE_AUTO_PUBLISH=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# System Limits
MAX_TOPICS_PER_USER=10
MAX_POSTS_PER_DAY=5
NEWS_RETENTION_DAYS=30
